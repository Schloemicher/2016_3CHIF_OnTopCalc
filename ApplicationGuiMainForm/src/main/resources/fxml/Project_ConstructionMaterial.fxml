<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.plakolb.controller.Project_ConstructionMaterialController">
   <children>
      <VBox alignment="CENTER" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label alignment="CENTER" text="Material für Montage" textAlignment="CENTER" textFill="#3c84ff">
               <font>
                  <Font name="Berlin Sans FB" size="36.0" />
               </font>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <Label id="boldLettering" text="Gesamtpreis: ">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Label id="boldLettering" text="0.00€">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <AnchorPane maxWidth="1024.0">
                     <children>
                        <TableView prefHeight="300.0">
                          <columns>
                            <TableColumn prefWidth="116.0" text="Produkt" />
                            <TableColumn prefWidth="73.0" text="Anzahl" />
                              <TableColumn prefWidth="105.0" text="Produktpreis €" />
                              <TableColumn prefWidth="111.0" text="Bauteil" />
                              <TableColumn prefWidth="166.0" text="Gesamtpreis des Produkts" />
                              <TableColumn maxWidth="32.0" minWidth="0.0" prefWidth="32.0" text=" " />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </AnchorPane>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <ComboBox fx:id="cb_Product" prefWidth="150.0" promptText="Produkt auswählen" />
                  <TextField fx:id="tf_Amount" prefHeight="25.0" prefWidth="106.0" promptText="Anzahl" />
                  <TextField fx:id="tf_Price" prefHeight="25.0" prefWidth="103.0" promptText="Preis in €" />
                  <ComboBox fx:id="cb_Component" prefWidth="150.0" promptText="Bauteil auswählen" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
